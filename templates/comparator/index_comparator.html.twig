{% extends 'base.html.twig' %}

{% block title %}Comparator{% endblock %}

{% block main %}


<div class="product-section section mb-60">
<div class="container">
        <div class="row">
            
            <!-- Section Title Start -->
            <div class="col-12 mb-40">
                <div class="section-title-one" data-title="BEST SELLER"><h1>BEST SELLERS</h1></div>
            </div>
            <!-- Section Title End -->
            
            <div class="col-12">
                <div class="row">
                    
                    {% for product in products %}
                    <div class="col-xl-3 col-lg-4 col-md-6 col-12 pb-30 pt-10">
                       
                        <!-- Product Start -->
                        <div class="ee-product">

                            <!-- Image -->
                            <div class="image">

                                <a href="{{ product.link }}" class="img"><img src="{{ product.imagelink }}" alt="Product Image"></a>
                                <a href="{{ product.link }}" class="add-to-cart" target="_blank"><i class="ti-shopping-cart"></i><span>VOIR L'OFFRE</span></a>

                            </div>

                            <!-- Content -->
                            <div class="content">

                                <!-- Category & Title -->
                                <div class="category-title">

                                    <a href="#" class="cat">Categories</a>
                                    <h5 class="title"><a href="{{ product.link }}">{{ product.title }}</a></h5>

                                </div>

                                <!-- Price & Ratting -->
                                <div class="price-ratting">

                                    <h5 class="price">{{ product.price }}</h5>
                                </div>

                            </div>

                        </div>
					</div>
					<!-- Product End -->
					{% endfor %}
					
				<div class="navigation">
            {{ knp_pagination_render(products) }}
               </div>
				</div>
			</div>
		
		</div>	
</div>
</div>


{% endblock %}
